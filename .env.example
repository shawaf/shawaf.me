# Required for database connectivity used on the /feeds page
DATABASE_URL=postgres://user:password@host:5432/database

# Required for the MongoDB-powered contact form persistence
MONGODB_URI=mongodb+srv://user:password@cluster.example.com/?retryWrites=true&w=majority

# Credentials for sending transactional emails from the contact form
EMAIL_USER=your-smtp-username
EMAIL_PASS=your-smtp-password
EMAIL_RECEIVER=you@example.com

# Credentials for the hidden blog publishing dashboard
BLOG_ADMIN_USERNAME=your-username
BLOG_ADMIN_PASSWORD=your-strong-password

# Optional: override where blog posts are stored (must be writable in production)
# BLOG_DATA_DIR=./data
